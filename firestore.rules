
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // As galerias são armazenadas em uma coleção 'galleries' onde cada
    // documento tem o ID do usuário (uid).
    match /galleries/{userId} {
      // Apenas o usuário autenticado dono desta galeria pode ler ou escrever nela.
      // Isso garante que a galeria de cada usuário seja privada.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
